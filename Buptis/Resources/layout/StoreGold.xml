<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:gravity="center"
        android:id="@+id/rootView"
        android:background="@drawable/storebackground"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/linearLayout2">
            <ImageButton
                android:layout_alignParentRight="true"
                android:src="@mipmap/close_gold"
                android:background="@null"
                android:scaleType="centerInside"
                android:padding="20dp"
                android:layout_width="70.5dp"
                android:layout_height="match_parent"
                android:id="@+id/ımageButton1" />
            <TextView
                android:paddingLeft="30dp"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:text="Buptis Gold"
                android:textColor="#BC9F43"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_marginTop="0.0dp"
                android:layout_marginLeft="0.0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView1"
                android:layout_marginRight="0.0dp"
                android:layout_toLeftOf="@id/ımageButton1" />
        </RelativeLayout>
        <android.support.v4.view.ViewPager
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/goldviewpager" />
        <dk.ostebaronen.droid.viewpagerindicator.LinePageIndicator
            android:id="@+id/indicator"
            android:padding="10dip"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="2.0dp" />
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="114.5dp"
            android:gravity="center"
            android:id="@+id/relativeLayout1"
            android:layout_marginBottom="0.0dp">
            <RelativeLayout
                android:layout_margin="5dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:id="@+id/relativeLayout2"
                android:background="@drawable/storebackgroundstroke">
                <TextView
                    android:text="1 Ay"
                    android:textColor="#BC9F43"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ımageView1"
                    android:id="@+id/txt1" />
                <TextView
                    android:text="44,00 ₺"
                    android:textColor="#999999"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:id="@+id/tv1" />
                <TextView
                    android:text="24,00 ₺"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:id="@+id/textView4" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="5dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:id="@+id/relativeLayout3"
                android:layout_toRightOf="@+id/relativeLayout2"
                android:background="@drawable/storebackgroundstroke">
                <TextView
                    android:text="6 Ay"
                    android:textColor="#BC9F43"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ımageView1"
                    android:id="@+id/txt2" />
                <TextView
                    android:text="300,00 ₺"
                    android:textColor="#999999"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt2"
                    android:id="@+id/tv2" />
                <TextView
                    android:text="34,00 ₺"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv2"
                    android:id="@+id/textView4" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="5dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:id="@+id/relativeLayout4"
                android:layout_toRightOf="@+id/relativeLayout3"
                android:background="@drawable/storebackgroundstroke">
                <TextView
                    android:text="1 Yıl"
                    android:textColor="#BC9F43"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ımageView1"
                    android:id="@+id/txt3" />
                <TextView
                    android:text="54,00 ₺"
                    android:textColor="#999999"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt3"
                    android:id="@+id/tv3" />
                <TextView
                    android:text="34,00 ₺"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3"
                    android:id="@+id/textView4" />
            </RelativeLayout>
        </RelativeLayout>
        <android.webkit.WebView
            android:layout_width="300dp"
            android:layout_height="126.5dp"
            android:id="@+id/webView1" />
        <Button
            android:text="Satın Al"
            android:textColor="#9B9B9B"
            android:textSize="22dp"
            android:background="@drawable/storebutton"
            android:layout_width="300dp"
            android:layout_height="58.0dp"
            android:id="@+id/button1"
            android:layout_marginTop="14.0dp"/>
    </LinearLayout>

</RelativeLayout>